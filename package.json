{
  "name": "go2asia-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Go2Asia - цифровая экосистема путешествий, жизни и бизнеса в Юго-Восточной Азии",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "gen:types": "orval --types",
    "gen:sdk": "orval --sdk",
    "gen:all": "pnpm gen:types && pnpm gen:sdk",
    "validate:openapi": "spectral lint docs/openapi/**/*.yaml",
    "db:migrate:generate": "turbo run db:migrate:generate",
    "db:migrate:up": "turbo run db:migrate:up",
    "db:migrate:down": "turbo run db:migrate:down",
    "db:migrate:status": "turbo run db:migrate:status",
    "db:seed": "turbo run db:seed",
    "db:migrate:staging": "echo 'Database migrations for staging (TODO)'",
    "db:migrate:prod": "echo 'Database migrations for production (TODO)'",
    "db:rollback:prod": "echo 'Database rollback for production (TODO)'",
    "test:smoke:preview": "cd apps/go2asia-pwa-shell && playwright test tests/smoke.spec.ts",
    "test:smoke:staging": "playwright test tests/smoke/staging.test.ts",
    "test:smoke:prod": "API_URL=https://api.go2asia.space playwright test tests/smoke/staging.test.ts",
    "test:contracts": "playwright test tests/contracts/**/*.test.ts",
    "test:e2e": "cd apps/go2asia-pwa-shell && playwright test"
  },
  "devDependencies": {
    "@orval/core": "^7.3.4",
    "@playwright/test": "^1.40.0",
    "@stoplight/spectral-cli": "^6.13.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "pnpm": {
    "overrides": {
      "jsonwebtoken": "npm:jose@latest",
      "@tsndr/cloudflare-worker-jwt": "npm:jose@latest"
    }
  }
}

